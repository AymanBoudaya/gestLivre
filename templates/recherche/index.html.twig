{% extends 'base.html.twig' %} {% block title %}Recherche de Livres{% endblock
%} {% block body %}
<div class="container mt-4">
  <h1 class="mb-4">üîç Recherche de Livres</h1>

  {# Formulaire de recherche #}
  {{ form_start(form, {'attr': {'class': 'mb-5 bg-light p-4 rounded shadow-sm'
  }}) }}
  <div class="row g-3 align-items-end">
    <div class="col-md-4 input">
      {{
        form_row(form.titre, {
          attr: { placeholder: "Entrez un titre..." }
        })
      }}
    </div>
    <div class="col-md-3">
      {{
        form_row(form.editeur, {
          attr: { class: "form-select" }
        })
      }}
    </div>
    <div class="col-md-3">
      {{
        form_row(form.categorie, {
          attr: { class: "form-select" }
        })
      }}
    </div>
  </div>
  {{ form_end(form) }}

  {# R√©sultats de recherche #} {% if form.vars.submitted %}
  <div class="search-results mt-5">
    <h2 class="mb-4">
      {% if livres|length > 0 %}
      <i class="fas fa-book"></i> {{ livres | length }} r√©sultat(s) trouv√©(s) {%
      else %} <i class="fas fa-exclamation-triangle"></i> Aucun r√©sultat {%
      endif %}
