{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1>Livre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>NbPages</th>
                <th>NbExemplaires</th>
                <th>DateEdition</th>
                <th>Prix</th>
                <th>Isbn</th>
                <th>Editeur</th>
                <th>Cat√©gorie</th>
                <th>Auteurs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.nbPages }}</td>
                <td>{{ livre.nbExemplaires }}</td>
                <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : '' }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.isbn }}</td>
                <td>{{ livre.editeur.nomEditeur }}</td>
                <td>{{ livre.categorie.designation }}</td>
                <td>
                {% for auteur in livre.Auteurs %}
                    <ul>
                        <li>
                            {{ auteur.prenom }} {{ auteur.nom }}{% if not loop.last %} {% endif %}
                        </li>
                    </ul>
                {% else %}
                    Aucun auteur
                {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_livre_show', {'id': livre.id}) }}">show</a>
                    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_livre_new') }}">Create new</a>
{% endblock %}
